<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/editString"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="enter logic string- lower case letters, start with bracket"
        android:layout_margin="15dp"
        android:textSize="24sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/doneButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/editString"
        android:layout_marginTop="15dp"
        android:text="DONE"
        app:layout_constraintStart_toStartOf="@id/editString"/>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/clearButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/editString"
        android:layout_marginTop="15dp"
        android:layout_marginStart="15dp"
        android:text="CLEAR"
        app:layout_constraintStart_toEndOf="@id/doneButton"/>
    <TextView
        android:id="@+id/productsTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/editString"
        android:text="Products: "
        app:layout_constraintTop_toBottomOf="@id/doneButton"
        android:layout_marginTop="15dp"
        />
    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/enterProductsEditText"
        android:layout_width="40dp"
        android:maxLength="1"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/productsTV"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toTopOf="@id/productsTV"
        />
    <Button
        android:id="@+id/addButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/enterProductsEditText"
        app:layout_constraintTop_toTopOf="@id/enterProductsEditText"
        android:text="ADD"
        android:layout_marginStart="10dp"/>
    <TextView
        android:id="@+id/enteredProducts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/enterProductsEditText"
        android:layout_marginTop="15dp"
        />
    <TextView
        android:id="@+id/resultTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/enteredProducts"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>